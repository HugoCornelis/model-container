<?xml version="1.0"?>
<!-- -*- NEUROSPACES-XML -*- -->
<neurospaces-xml version="0.2" >

<specification>

	<type>
		<level> mechanism </level>
		<domain> continuous </domain>
	</type>

</specification>

<documentation>

	<author name="hugo" />

	<date value="Thu Sep 20 10:07:16 CEST 2001" />

	<comments type="ascii" >

#!neurospacesparse
// -*- NEUROSPACES-XML -*-
// Equations for Pukeinje cell GABA synapse.
// Based on Miles R: . J Physiol 1990

	</comments>

</documentation>

<unitset>

	<unit name="temperature" units="celsius" short="Ce" />
	<unit name="charge" units="coulomb" short="Co" />
	<unit name="time" units="seconds" short="s" />
	<unit name="space" units="meters" short="m" />
	<unit name="surface" units="meters^2" short="m^2" />
	<unit name="volume" units="meters^3" short="m^3" />
	<unit name="potential" units="volt" short="Vm" />
	<unit name="conductance" units="siemens" short="Gk" />

<!-- 	<conductance-density units="siemens / surface" short="Gk / m^2" /> -->

<!-- or alternative with dependencies on other unit declarations -->

<!-- 	<conductance-density type="derived" > -->
<!--		<operation name="divide" type="/" /> -->
<!--		<element name="conductance" /> -->
<!--		<element name="surface" /> -->
<!--	</conductance-density> -->

	<unit name="current" units="milliampere" short="Ik" />
	<unit name="concentration" units="molaire" short="concen" />

	<unit name="discrete-events" units="events" />

</unitset>


<!-- domain declarations --> 

<!-- also contains declarations of element -->
<!-- type that map one domain to another. -->

<domains>

	<continuous dimension="time" />

	<discrete dimension="discrete-events" />

	<mappers>
		<mapper name="Synapse" >
			<source name="discrete" units="events" />
			<target name="continuous" units="activation" />
		</mapper>

		<mapper name="SpikeGenerator" >
			<source name="continuous" units="Vm" />
			<target name="discrete" units="events" />
		</mapper>
	</mappers>

</domains>

<imports>

	<file 
		namespace="mapper" 
		name="mappers/spikereceiver.ndf" />

</imports>

<private-models>

	<alias 
		namespace="mapper"
		source="/Synapse"
		private-model="Synapse" />

</private-models>

<public-models>

	<channel name="Purk-GABA" >
		<bindables>
			<input name="Vm" />
			<output name="Gk" />
		</bindables>

<!-- We have a number of predefined equations: -->
<!--     ALPHA_EQUATION, EXP2_EQUATION, HH_EQUATION -->
<!-- Otherwise we need to implement a MODL-like equation lexicon -->

<!-- I still have to see how this fits into the whole design, -->
<!-- see also Golgi.ncd for use of EXP2_EQUATION -->


<!-- A <parameter-set> is a set of elements derived from <parameter> or -->
<!-- <parameter-set>.  <symbol-parameter>, <reference-parameter> and -->
<!-- <algorithm-parameter> are all derived from parameter.  <parameter-set> -->
<!-- has an attribute 'name' to allow hierarchical parameters which (I -->
<!-- hope) will ease parameter passing to algorithms.  Of course <parameter> -->
<!-- also has a 'name' attribute, which is inherited by all other parameter -->
<!-- elements. -->

		<parameter-set>
			<symbol-parameter name="GMAX" unit="Gk" value="1.077" />
			<symbol-parameter name="Ek" unit="Vm" value="0.0" />
		</parameter-set>

		<insert-child source="Synapse" name="synapse" />

		<exp2-equation name="exp2" >
			<bindables>
				<input name="activation" />
				<output name="Gk" />
			</bindables>

			<parameter-set>>
				<symbol-parameter name="TAU1" value="0.93e-3" />
				<symbol-parameter name="TAU2" value="26.50e-3" />
			</parameter-set>>

		</exp2-equation>

	</channel>

</public-models>

</neurospaces-xml>


